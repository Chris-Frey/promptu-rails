<h2>new activity page</h2>


<div class="new-body">

  <%= form_with model: @activity do |form| %>
    Activity Name
    <br>
    <%= form.text_field :name %>
    <br>
    <br>
    Activity description
    <br>
    <%= form.text_area :description, size: "60x5" %>
    <br>
    Start Time<%= form.time_select :start_time %>
