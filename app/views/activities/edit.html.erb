<% if user_signed_in? %>
  <h1>Activity</h1>



    <%= @activity.user_id %>

  <%= form_with model: @activity do |form| %>
    Activity Name
    <br>
    <%= form.text_field :name %>
    <br>
    Description
    <br>
    <%= form.text_area :description, size: "60x5" %>
    <br>
    Start Date<%= form.date_select :start_time %>
    Start Time<%= form.time_select :start_time %>
    <br>
    <%= form.submit class: "submit-button"%>
    <%= button_to "Cancel Editing", show_activity_path(@activity.id), method: :get %>

  <% end %>


    <%= button_to "Delete Activity", show_activity_path(@activity.id), method: :delete, turbo_confirm: "are you sure?" %>
    <%= button_to "Home", "/", method: :get %>
  <% else %>
    <%= button_to "Log In", new_user_session_path, class: "login-button" %>


<% end %>